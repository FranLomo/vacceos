<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#EA9037"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/botonAtras"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:backgroundTint="#FFFFFF"
                android:clickable="true"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:src="@drawable/flechita"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="100dp"
                app:layout_gravity="start|top" />

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="100"
                android:fontFamily="sans-serif-black"
                android:text="DRESS UP"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/botonAjustes"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:clickable="true"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:src="@drawable/engranajito"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                app:cornerRadius="100dp"
                app:layout_gravity="top" />

        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="620dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomNavigationView">

        <ImageView
            android:id="@+id/tunicas"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/redondeado_arriba"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/tunicas_icon" />

        <ImageView
            android:id="@+id/zapatillas"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/naranja"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/zapas_icon" />

        <ImageView
            android:id="@+id/escudos"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/naranja"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/escudos_icon" />

        <ImageView
            android:id="@+id/objetos"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/naranja"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/objetos_icon" />

        <ImageView
            android:id="@+id/capas"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/naranja"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/capas_icon" />

        <ImageView
            android:id="@+id/joyas"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/naranja"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/joyas_icon" />

        <ImageView
            android:id="@+id/cinturones"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/redondeado_abajo"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/cintos_icon" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="620dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomNavigationView">

        <ImageView
            android:id="@+id/capa0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pintodesnudo" />

        <ImageView
            android:id="@+id/capa1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/capa2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/capa3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/capa4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/capa5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/capa6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/capa7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blank" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>