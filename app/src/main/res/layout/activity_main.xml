<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/naranja"
    android:backgroundTintMode="add">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="#309CA2"
        android:paddingTop="20dp"
        android:paddingBottom="50dp"
        android:textAlignment="center"
        app:columnCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Centro de estudios Vacceos \n Federico Wattenberg"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_gravity="center|top"
            app:layout_rowWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/actividades"
            android:layout_width="280dp"
            android:layout_height="65dp"
            android:backgroundTint="#EA9730"
            android:text="@string/minijuegos"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="30dp"
            app:elevation="12dp"
            app:iconTint="@color/white"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/juegos"
            android:layout_width="280dp"
            android:layout_height="65dp"
            android:backgroundTint="#EA9730"
            android:text="@string/expvacc"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:backgroundTint="@color/naranja"
            app:cornerRadius="30dp"
            app:elevation="12dp"
            app:layout_column="0"
            app:layout_gravity="center|top"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Universidad de Valladolid"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_column="0"
            app:layout_gravity="bottom|center"
            app:layout_row="3"
            app:layout_rowWeight="1" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>