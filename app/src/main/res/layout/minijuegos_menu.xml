<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/botonAtras"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:src="@drawable/flechita"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            app:cornerRadius="100dp"
            app:layout_gravity="start|top" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="60dp"
            app:columnCount="2"
            app:rowCount="2">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="20dp"
                app:layout_column="0"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                app:layout_row="0"
                app:layout_rowSpan="1"
                app:layout_rowWeight="1">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="30sp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#EA9037"
                        android:clickable="false">

                        <ImageView
                            android:id="@+id/buttonImageD"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentEnd="false"
                            android:layout_alignParentRight="false"
                            android:layout_alignParentBottom="false"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/portadapuzzle" />

                        <TextView
                            android:id="@+id/buttonTextD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/buttonImageD"
                            android:layout_centerHorizontal="true"
                            android:background="#EA9037"
                            android:fontFamily="sans-serif-black"
                            android:text="@string/puzzle_button"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            tools:ignore="TextContrastCheck" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="20dp"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                app:layout_row="0"
                app:layout_rowSpan="1"
                app:layout_rowWeight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="30dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#EA9037"
                        android:clickable="false">

                        <ImageView
                            android:id="@+id/buttonImageL"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/portadalaberinto" />

                        <TextView
                            android:id="@+id/buttonTextL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/buttonImageL"
                            android:layout_centerHorizontal="true"
                            android:background="#EA9037"
                            android:fontFamily="sans-serif-black"
                            android:text="@string/laberinto_button"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            tools:ignore="TextContrastCheck" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="20dp"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                app:layout_rowSpan="1"
                app:layout_rowWeight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="30dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#EA9037">

                        <ImageView
                            android:id="@+id/buttonImageC"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/portadacolorear" />

                        <TextView
                            android:id="@+id/buttonTextC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/buttonImageC"
                            android:layout_centerHorizontal="true"
                            android:background="#EA9037"
                            android:fontFamily="sans-serif-black"
                            android:text="@string/colorear_button"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            tools:ignore="TextContrastCheck" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="20dp"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_gravity="center"
                app:layout_rowSpan="1"
                app:layout_rowWeight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="30dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#EA9037">

                        <ImageView
                            android:id="@+id/buttonImageE"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/portadaexcavar" />

                        <TextView
                            android:id="@+id/buttonTextE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/buttonImageE"
                            android:layout_centerHorizontal="true"
                            android:background="#EA9037"
                            android:fontFamily="sans-serif-black"
                            android:text="@string/excavar_button"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            tools:ignore="TextContrastCheck" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

        </androidx.gridlayout.widget.GridLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#EA9037"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/perfilboton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#EA9037"
                    android:clickable="true"
                    android:src="@drawable/perfilito" />

                <ImageView
                    android:id="@+id/homeboton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#EA9037"
                    android:clickable="true"
                    android:src="@drawable/casita" />

                <ImageView
                    android:id="@+id/ajustesboton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#EA9037"
                    android:clickable="true"
                    android:src="@drawable/engranajito" />
            </LinearLayout>
        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>