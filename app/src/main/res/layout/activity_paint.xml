<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="false"
        android:background="@color/azul">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#EA9037"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/botonAtras"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:backgroundTint="#FFFFFF"
                        android:clickable="true"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:src="@drawable/flechita"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:cornerRadius="100dp"
                        app:layout_gravity="start|top" />

                    <TextView
                        android:id="@+id/titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="100"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/colorear_button"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/botonAjustes"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:clickable="true"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:src="@drawable/engranajito"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:cornerRadius="100dp"
                        app:layout_gravity="top" />

                </LinearLayout>
            </com.google.android.material.bottomnavigation.BottomNavigationView>

            <RelativeLayout
                android:id="@+id/layoutPintar"
                android:layout_width="368dp"
                android:layout_height="489dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffff" />

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:foregroundGravity="bottom"
                app:columnCount="5"
                app:rowCount="2">

                <ImageView
                    android:id="@+id/rojo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/rojo"
                    app:layout_column="0"
                    app:layout_row="0" />

                <ImageView
                    android:id="@+id/naranja"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/naranja" />

                <ImageView
                    android:id="@+id/amarillo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/amarillo" />

                <ImageView
                    android:id="@+id/verde"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/verde"
                    app:layout_column="3"
                    app:layout_row="0" />

                <ImageView
                    android:id="@+id/azulclaro"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/azulclaro" />

                <ImageView
                    android:id="@+id/azul"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/azul" />

                <ImageView
                    android:id="@+id/morado"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/morado" />

                <ImageView
                    android:id="@+id/rosa"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/rosa" />

                <ImageView
                    android:id="@+id/blanco"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/goma" />

                <ImageView
                    android:id="@+id/pincel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="15dp"
                    app:srcCompat="@drawable/pincel" />
            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>